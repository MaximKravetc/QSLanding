{% extends "layouts/default.njk" %}

{% set base_path = "model-add" %}
{% set page_title = "Add model" %}
{% set page_description = "" %}

{% block main %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form method="#" action="#">
                            <div class="card-header">
                                <h4 class="card-title">
                                    Add new model
                                </h4>
                            </div>
                            <div class="card-content">
                                <div class="form-group">
                                    <label>Model name</label>
                                    <input type="text" placeholder="Model name" class="form-control">
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Country</label>
                                            <select class="selectpicker" data-style="btn btn-default btn-block" title="View angle" data-size="5">
                                                <option value="ukr">Ukraine</option>
                                                <option selected="selected" value="bl">Belarus</option>
                                                <option value="ru">Russia</option>
                                                <option value="sl">Slovenia</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Date of birth</label>
                                            <input type="text" class="form-control datetimepicker" placeholder="Date of birth"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Height</label>
                                            <input type="text" placeholder="Model height" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Weight</label>
                                            <input type="text" placeholder="Model weight" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Bio</label>
                                    <textarea class="form-control" placeholder="Here can be your nice text" rows="3"></textarea>
                                </div>





                                <button type="submit" class="btn btn-fill btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- end card -->
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <form method="#" action="#">
                            <div class="card-header">
                                <h4 class="card-title">
                                    Media files
                                </h4>
                            </div>
                            <div class="card-content">
                                <div class="form-group">
                                    <label>Profile photo</label>
                                    <input type="file" name="cover[app]" class="form-control">
                                </div>

                                <button type="submit" class="btn btn-fill btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- end card -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}