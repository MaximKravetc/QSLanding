{% extends "layouts/default.njk" %}

{% set base_path = "scene-add" %}
{% set page_title = "Add Scene" %}
{% set page_description = "" %}

{% block main %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <form method="#" action="#">
                            <div class="card-header">
                                <h4 class="card-title">
                                    Add new scene
                                </h4>
                            </div>
                            <div class="card-content">
                                <div class="form-group">
                                    <label>Scene title</label>
                                    <input type="text" placeholder="Title" class="form-control">
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>View angle</label>
                                            <select class="selectpicker" data-style="btn btn-default btn-block"
                                                    title="View angle" data-size="5">
                                                <option value="120">120</option>
                                                <option selected="selected" value="180">180</option>
                                                <option value="220">220</option>
                                                <option value="180">270</option>
                                                <option value="220">360</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Fake view angle</label>
                                            <select class="selectpicker" data-style="btn btn-default btn-block"
                                                    title="Fake view angle" data-size="5">
                                                <option value="120">120</option>
                                                <option selected="selected" value="180">180</option>
                                                <option value="220">220</option>
                                                <option value="180">270</option>
                                                <option value="220">360</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Date</label>
                                            <input type="text" class="form-control datetimepicker" value="01/10/2018"
                                                   placeholder="Datetime"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>FPS</label>
                                            <select class="selectpicker" data-style="btn btn-default btn-block"
                                                    title="FPS" data-size="5">
                                                <option selected="selected" value="30">30</option>
                                                <option value="60">60</option>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Format</label>
                                            <select class="selectpicker" data-style="btn btn-default btn-block"
                                                    title="Format" data-size="5">
                                                <option value="sbs2l">sbs2l</option>
                                                <option value="ab2l">ab2l</option>
                                                <option value="mono">mono</option>
                                                <option value="sbs2r">sbs2r</option>
                                                <option value="ab2r">ab2r</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label>Actors</label>
                                    <select multiple title="Multiple Select" class="selectpicker " data-style="btn-info btn-fill btn-block" data-size="7">
                                        <option value="ARS">ARS</option>
                                        <option value="AUD">AUD</option>
                                        <option value="BRL">BRL</option>
                                        <option value="CAD">CAD</option>
                                        <option value="CHF">CHF</option>
                                        <option value="CNY">CNY</option>
                                        <option value="CZK">CZK</option>
                                        <option value="DKK">DKK</option>
                                        <option value="EUR">EUR</option>
                                        <option value="GBP">GBP</option>
                                        <option value="HKD">HKD</option>
                                        <option value="HUF">HUF</option>
                                        <option value="IDR">IDR</option>
                                        <option value="ILS">ILS</option>
                                        <option value="INR">INR</option>
                                        <option value="JPY">JPY</option>
                                        <option value="KRW">KRW</option>
                                        <option value="MYR">MYR</option>
                                        <option value="MXN">MXN</option>
                                        <option value="NOK">NOK</option>
                                        <option value="NZD">NZD</option>
                                        <option value="PHP">PHP</option>
                                        <option value="PLN">PLN</option>
                                        <option value="RUB">RUB</option>
                                        <option value="SEK">SEK</option>
                                        <option value="SGD">SGD</option>
                                        <option value="TWD">TWD</option>
                                        <option value="USD">USD</option>
                                        <option value="VND">VND</option>
                                        <option value="ZAR">ZAR</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control" placeholder="Here can be your nice text"
                                              rows="3"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Tags</label>
                                    <div class="col-md-12">
                                        <div class="checkbox checkbox-inline">
                                            <input id="checkbox50" type="checkbox">
                                            <label for="checkbox50">
                                                Tag 1
                                            </label>
                                        </div>
                                        <div class="checkbox checkbox-inline">
                                            <input id="checkbox51" type="checkbox">
                                            <label for="checkbox51">
                                                Tag 2
                                            </label>
                                        </div>
                                        <div class="checkbox checkbox-inline">
                                            <input id="checkbox52" type="checkbox">
                                            <label for="checkbox52">
                                                Tag 3
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Activation</label>
                                    <div class="checkbox">
                                        <input id="reIncoding" type="checkbox">
                                        <label for="reIncoding">
                                            Activate after re-encoding
                                        </label>
                                    </div>

                                    <div class="checkbox">
                                        <input id="customTime" type="checkbox">
                                        <label for="customTime">
                                            Activate at custom time
                                        </label>
                                    </div>
                                </div>




                                <div id="dateCollapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label>Date</label>
                                            <input type="text" disabled class="form-control datetimepicker"
                                                   placeholder="Datetime"/>
                                        </div>
                                    </div>
                                </div>


                                <button type="submit" class="btn btn-fill btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- end card -->
                </div>

                <div class="col-md-12">
                    <div class="card">
                        <form method="#" action="#">
                            <div class="card-header">
                                <h4 class="card-title">
                                    Media files
                                </h4>
                            </div>
                            <div class="card-content">
                                <div class="form-group">
                                    <label>Cover for APP 576х354</label>
                                    <input type="file" name="cover[app]" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Cover for WEB 786х830</label>
                                    <input type="file" name="cover[web]" class="form-control">
                                </div>


                                <button type="submit" class="btn btn-fill btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- end card -->
                </div>

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                Uploaded media
                            </h4>
                        </div>
                        <div class="card-content">
                            <h5 class="card-title">
                                Screenshots:
                            </h5>
                            <div class="row img-group">
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                            </div>
                            <div class="row img-group">
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-3">
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                            </div>

                            <div class="row img-group">
                                <div class="col-md-6">
                                    <h5 class="card-title">
                                        WEB Cover
                                    </h5>
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="card-title">
                                        APP Cover
                                    </h5>
                                    <img src="http://via.placeholder.com/350x250">
                                    <a href="#" onclick=""><i class="ti-trash"></i></a>
                                </div>
                            </div>

                        </div>


                    </div>
                    <!-- end card -->
                </div>

            </div>
        </div>
    </div>
{% endblock %}